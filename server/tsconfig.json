{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2020", "dom", "dom.iterable"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"],
      "@LunaiTypes/*": ["../../@types/shared/*"],
      "@prompts/*": ["../../@prompts/*"]
    }
  },
  "include": ["src/**/*", "../@types/shared/*", "../@prompts/*"],
  "exclude": ["node_modules"]
}